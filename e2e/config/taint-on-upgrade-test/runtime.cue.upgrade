package tomei

// Go runtime upgraded to 1.25.7 WITHOUT taintOnUpgrade (default false).
// Dependent tools should NOT be tainted on upgrade.

_os:   string @tag(os)
_arch: string @tag(arch)

_goVersionUpgrade: "1.25.7"

goRuntime: {
	apiVersion: "tomei.terassyi.net/v1beta1"
	kind:       "Runtime"
	metadata: name: "go"
	spec: {
		type:    "download"
		version: _goVersionUpgrade
		source: {
			url: "https://go.dev/dl/go\(spec.version).\(_os)-\(_arch).tar.gz"
			checksum: url: "https://go.dev/dl/?mode=json&include=all"
		}
		binaries: ["go", "gofmt"]
		binDir:      "~/go/bin"
		toolBinPath: "~/go/bin"
		env: {
			GOROOT: "~/.local/share/tomei/runtimes/go/\(spec.version)"
			GOBIN:  "~/go/bin"
		}
		// taintOnUpgrade is intentionally omitted (defaults to false)
		commands: {
			install: ["go install {{.Package}}@{{.Version}}"]
			remove: ["rm -f {{.BinPath}}"]
		}
	}
}
